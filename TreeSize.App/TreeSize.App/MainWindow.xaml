<Window x:Class="TreeSize.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeSize.App" d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="TreeSize" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Select drive</TextBlock>

        <ComboBox x:Name="selectedDrive" Grid.Row="0" Grid.Column="1" Width="60" HorizontalAlignment="Left" 
                  ItemsSource="{Binding LogicalDrives}" 
                  SelectedItem="{Binding SelectedDrive}">
        </ComboBox>

        <Button  x:Name="startButton" Grid.Column="2"  Content="Start analyze"
                 
                 Click="Button_Click">
        </Button>

        <DataGrid Grid.Row="2" Grid.ColumnSpan="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Path" Width="500"/>
                <DataGridTextColumn Header="Size" Width="100"/>
                <DataGridTextColumn Header="Folders" Width="100"/>
                <DataGridTextColumn Header="Files" Width="100"/>
            </DataGrid.Columns>

        </DataGrid>

        <TreeView x:Name ="fileTree" Grid.Row="3" Grid.ColumnSpan="4" ItemsSource="{Binding FoldersTreeViewModels}" 
                  TreeViewItem.Expanded="fileTree_Expanded">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="FontWeight" Value="Bold" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:FoldersTreeViewModel}" ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Margin="0,0,5,0" Source="Images\folder.png"/>
                        <TextBlock Text="{Binding FolderName}" Margin="0,0,4,0" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type local:FilesTreeViewModel}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Margin="0,0,5,0" Source="Images\file.png" />
                        <TextBlock Text="{Binding FileName}" Margin="0,0,4,0" />
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
